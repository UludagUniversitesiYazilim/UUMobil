<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marks_item_container"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="3dp">

    <TextView
        android:id="@+id/mark_content_courseName"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_weight="0.6"/>

    <TextView
        android:id="@+id/mark_content_examType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/mark_content_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"/>

    <!--<TextView
        android:id="@+id/mark_content_average"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"/>-->

</LinearLayout>